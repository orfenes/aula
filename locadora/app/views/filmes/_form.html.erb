<%= form_for(@filmes) do |f| %>
  <div class="field">
    <%= f.label :nome %>
    <%= f.text_field :nome %>
  </div>

  <div class="field">
    <%= f.label :ano %>
    <%= f.text_field :ano %>
  </div>

  <div class="field">
    <%= f.label :disponivel %>
    <%= f.text_field :disponivel %>
  </div>

  <div class="field">
    <%= f.label :generos_id %>
    <%= f.collection_select(:generos_id, @genero_options, :id, :nome) %>
  </div>

  <div class="actions">
    <%= f.submit("Enviar", class: "button") %>
    <%= link_to 'Voltar', filmes_path, class: "button" %>
  </div>

<% end %>